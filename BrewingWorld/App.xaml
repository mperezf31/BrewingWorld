<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:converters="clr-namespace:BrewingWorld.Converters" x:Class="BrewingWorld.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Global Colors-->
            <Color x:Key="ColorPrimary">#233a77</Color>
            <Color x:Key="IndicatorColor">#426cda</Color>
            <!--Global Styles-->
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource ColorPrimary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
            <!--Global converters-->
            <converters:ImageDefaultConverter x:Key="ImageDefaultConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>