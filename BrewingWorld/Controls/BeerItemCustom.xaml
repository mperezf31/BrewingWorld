<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Name="this"
             x:Class="BrewingWorld.Controls.BeerItemCustom">
    
    
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" Padding="5">

            <Image WidthRequest="40" HeightRequest="40" Aspect="AspectFit" Source="{Binding Source={x:Reference this}, Path= BeerItemData.Images.Medium}" />
            <StackLayout Orientation="Vertical"  Spacing="0" >
                <Label Text="{Binding Source={x:Reference this}, Path= BeerItemData.Name}" FontAttributes="Bold"/>
                <Label Text="{Binding Source={x:Reference this}, Path= BeerItemData.Style.ShortName}" FontSize="13" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
    
    
</ContentView>